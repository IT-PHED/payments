@{
    ViewData["Title"] = "Confirm Payment";
}

<style>
    .payment-container {
        max-width: 992px;
        margin: 0 auto;
    }

    .progress-steps {
        display: flex;
        justify-content: space-between;
        margin-bottom: 2.5rem;
        position: relative;
    }

        .progress-steps::before {
            content: '';
            position: absolute;
            top: 20px;
            left: 0;
            right: 0;
            height: 3px;
          
            z-index: -1;
        }

        .progress-steps::after {
            content: '';
            position: absolute;
            top: 20px;
            left: 0;
            width: 100%;
            height: 3px;
            background: var(--primary);
            z-index: -1;
            transition: width 0.3s ease;
        }

    .step {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 0 10px;
    }

    .step-circle {
        width: 42px;
        height: 42px;
        border-radius: 50%;
        background: #e9ecef;
        color: #6c757d;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        margin-bottom: 8px;
        transition: all 0.3s;
    }

    .step.active .step-circle {
        background: var(--primary);
        color: white;
        box-shadow: 0 0 0 4px rgba(13, 110, 253, 0.1);
    }

    .step.completed .step-circle {
        background: #198754;
        color: white;
    }

        .step.completed .step-circle::before {
            content: '✓';
        }

    .step-label {
        font-size: 0.85rem;
        font-weight: 500;
        color: #6c757d;
        text-align: center;
    }

    .step.active .step-label,
    .step.completed .step-label {
        color: var(--primary);
    }

    .payment-card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 2px 12px rgba(0,0,0,0.08);
        overflow: hidden;
    }

    .card-header-custom {
        background: linear-gradient(135deg, var(--primary) 0%, #0a58ca 100%);
        color: white;
        padding: 1.5rem;
        border: none;
    }

    .detail-row {
        display: flex;
        justify-content: space-between;
        padding: 1rem 0;
        border-bottom: 1px solid #f0f0f0;
    }

        .detail-row:last-child {
            border-bottom: none;
        }

    .detail-label {
        color: #6c757d;
        font-size: 0.9rem;
        font-weight: 500;
    }

    .detail-value {
        font-weight: 600;
        color: #212529;
        text-align: right;
        max-width: 60%;
        word-break: break-word;
    }

    .amount-highlight {
        background: linear-gradient(135deg, #d4edda 0%, #c3e6cb 100%);
        border-radius: 10px;
        padding: 1.25rem;
        margin: 1.5rem 0;
        border: 2px solid #28a745;
    }

    .amount-label {
        font-size: 0.9rem;
        color: #155724;
        font-weight: 600;
        margin-bottom: 0.25rem;
    }

    .amount-value {
        font-size: 2rem;
        font-weight: 700;
        color: #198754;
    }

    .warning-box {
        background: #fff3cd;
        border-left: 4px solid #ffc107;
        border-radius: 8px;
        padding: 1rem;
        margin: 1.5rem 0;
    }

        .warning-box .icon {
            color: #856404;
            font-size: 1.25rem;
            margin-right: 0.5rem;
        }

    .warning-text {
        color: #856404;
        font-size: 0.9rem;
        line-height: 1.5;
        margin: 0;
    }

    .submit-btn {
        border-radius: 8px;
        padding: 0.85rem;
        font-weight: 600;
        font-size: 1.05rem;
        transition: all 0.2s;
        border: none;
    }

        .submit-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(25, 135, 84, 0.3);
        }

    .cancel-btn {
        border-radius: 8px;
        padding: 0.75rem;
        font-weight: 500;
        transition: all 0.2s;
    }

        .cancel-btn:hover {
            background: #f8f9fa;
            border-color: #adb5bd;
        }


    @@media (max-width: 576px) {
        .step-label

    {
        font-size: 0.75rem;
    }

    .step-circle {
        width: 36px;
        height: 36px;
        font-size: 0.9rem;
    }

    .amount-value {
        font-size: 1.75rem;
    }

    .detail-row {
        flex-direction: column;
        gap: 0.5rem;
    }

    .detail-value {
        max-width: 100%;
        text-align: left;
    }

    }
</style>

<div class="payment-container">
    <!-- Progress Steps -->
    <div class="progress-steps">
        <div class="step completed">
            <div class="step-circle"></div>
            <span class="step-label">Customer Details</span>
        </div>
        <div class="step active">
            <div class="step-circle">2</div>
            <span class="step-label">Review & Payment</span>
        </div>
    </div>

    <!-- Payment Confirmation Card -->
    <div class="card payment-card">
        <!-- Header -->
        <div class="card-header-custom">
            <h5 class="mb-1 fw-semibold">
                <i class="bi bi-check-circle me-2"></i>Confirm Payment Details
            </h5>
            <small class="opacity-90">Review your information before proceeding</small>
        </div>

        <!-- Body -->
        <div class="card-body p-4 p-md-5">
            <!-- Customer Details -->
            <div class="mb-4">
                <div class="detail-row">
                    <span class="detail-label">
                        <i class="bi bi-person me-2"></i>Customer Name
                    </span>
                    <span class="detail-value">@ViewBag.CustomerName</span>
                </div>

                <div class="detail-row">
                    <span class="detail-label">
                        <i class="bi bi-geo-alt me-2"></i>Service Address
                    </span>
                    <span class="detail-value">@ViewBag.Address</span>
                </div>

                <div class="detail-row">
                    <span class="detail-label">
                        <i class="bi bi-speedometer2 me-2"></i>Meter Number
                    </span>
                    <span class="detail-value">@ViewBag.MeterNo</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">
                        <i class="bi bi-speedometer2 me-2"></i>Incident Rate
                    </span>
                    <span class="detail-value">@ViewBag.FactorAmount</span>
                </div>

                <div class="detail-row">
                    <span class="detail-label">
                        <i class="bi bi-telephone me-2"></i>Phone Number
                    </span>
                    <span class="detail-value">@ViewBag.PhoneNumber</span>
                </div>

                <div class="detail-row">
                    <span class="detail-label">
                        <i class="bi bi-envelope me-2"></i>Email Address
                    </span>
                    <span class="detail-value">@ViewBag.Email</span>
                </div>
            </div>
            <!-- Warning Box -->
            <div class="warning-box">
                <div class="d-flex">
                    <i class="bi bi-exclamation-triangle-fill icon"></i>
                    <p class="warning-text">
                        <strong>Important:</strong> Please verify that the meter number is correct and matches the customer name and address.
                        Payments made to incorrect meters cannot be reversed or refunded.
                    </p>
                </div>
            </div>


            <!-- Payment Form -->
            <form asp-action="InitializePayment" method="post" class="js-loading-form">

                <input type="hidden" id="h_AccountNo" name="AccountNo" value="@ViewBag.AccountNo" />
                <input type="hidden" id="h_MeterNo" name="MeterNo" value="@ViewBag.MeterNo" />
                <input type="hidden" id="h_Phone" name="Phone" value="@ViewBag.PhoneNumber" />
                <input type="hidden" id="h_Email" name="Email" value="@ViewBag.Email" />
                <input type="hidden" id="h_Name" name="CustomerName" value="@ViewBag.CustomerName" />
                <input type="hidden" id="h_Address" name="Address" value="@ViewBag.Address" />

                <div class="mb-3">
                    <label for="PaymentPurpose" class="form-label">Payment Purpose</label>
                    <select id="PaymentPurpose" name="PaymentPurpose" class="form-select" required>
                        <option value="14" selected>Energy</option>
                        @if (ViewBag.Payables != null)
                        {
                            foreach (var payable in ViewBag.Payables)
                            {
                                <option value="@payable.purposeId">@payable.purposeName Total of @payable.totalAmount  </option>
                            }
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label for="Amount" class="form-label">Amount (₦)</label>
                    <input type="number" id="Amount" name="Amount" step="0.01" class="form-control" value="" min="100" required />
                </div>

                <div class="d-grid gap-3">
                    <button type="submit" class="btn btn-success submit-btn">
                        <i class="bi bi-credit-card me-2"></i>Proceed to Payment Xpress
                    </button>
                   @* <button type="button" class="btn btn-primary submit-btn" onclick="payWithInterswitch()">
                        <i class="bi bi-credit-card-2-front me-2"></i>Proceed to Payment Interswitch
                    </button>
                    <button type="submit" asp-action="InitializeGlobalPay" formtarget="_blank" class="btn btn-danger submit-btn">
                        <i class="bi bi-bank me-2"></i>Proceed to Zenith GlobalPay
                    </button> *@
                    <a asp-action="Index" class="btn btn-outline-secondary cancel-btn">
                        <i class="bi bi-arrow-left me-2"></i>Go Back
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>



