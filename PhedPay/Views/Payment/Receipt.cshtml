@model PhedPay.Models.TransactionEntity
@{
    ViewData["Title"] = "Payment Successful";
}

<style>
    .success-container {
        max-width: 650px;
        margin: 0 auto;
        padding: 2rem 1rem;
    }

    .success-icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
        animation: successPop 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55);
        box-shadow: 0 8px 24px rgba(40, 167, 69, 0.3);
    }

    @@keyframes successPop {
        0% {
            transform: scale(0);
            opacity: 0;
        }

        50% {
            transform: scale(1.1);
        }

        100% {
            transform: scale(1);
            opacity: 1;
        }
    }

    .success-icon i {
        font-size: 2.5rem;
        color: white;
    }

    .success-title {
        font-size: 1.75rem;
        font-weight: 700;
        color: #198754;
        margin-bottom: 0.5rem;
    }

    .success-subtitle {
        color: #6c757d;
        font-size: 1.05rem;
        margin-bottom: 1.5rem;
    }

    .amount-highlight {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        border-radius: 12px;
        padding: 2rem;
        margin-bottom: 1.5rem;
        box-shadow: 0 4px 16px rgba(40, 167, 69, 0.25);
        text-align: center;
    }

    .amount-label {
        color: rgba(255, 255, 255, 0.9);
        font-size: 0.95rem;
        font-weight: 500;
        margin-bottom: 0.5rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .amount-value {
        color: white;
        font-size: 2.5rem;
        font-weight: 700;
        margin: 0;
    }

    .btn-download-primary {
        background: var(--primary);
        color: white;
        border: none;
        border-radius: 10px;
        padding: 1rem 2.5rem;
        font-weight: 600;
        font-size: 1.1rem;
        transition: all 0.3s;
        width: 100%;
        margin-bottom: 2rem;
        box-shadow: 0 4px 12px rgba(13, 110, 253, 0.3);
    }

        .btn-download-primary:hover {
            background: #0b5ed7;
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(13, 110, 253, 0.4);
        }

        .btn-download-primary i {
            font-size: 1.25rem;
            margin-right: 0.5rem;
        }

    .receipt-card {
        background: white;
        border: 2px solid #e9ecef;
        border-radius: 12px;
        padding: 2rem;
        margin: 2rem 0;
        box-shadow: 0 2px 12px rgba(0,0,0,0.06);
    }

    .receipt-header {
        border-bottom: 2px dashed #dee2e6;
        padding-bottom: 1rem;
        margin-bottom: 1.5rem;
    }

    .receipt-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: #212529;
        margin-bottom: 0.25rem;
    }

    .receipt-subtitle {
        color: #6c757d;
        font-size: 0.9rem;
    }

    .receipt-row {
        display: flex;
        justify-content: space-between;
        padding: 0.75rem 0;
        border-bottom: 1px solid #f8f9fa;
    }

        .receipt-row:last-child {
            border-bottom: none;
        }

    .receipt-label {
        color: #6c757d;
        font-weight: 500;
        font-size: 0.9rem;
    }

    .receipt-value {
        color: #212529;
        font-weight: 600;
        text-align: right;
        max-width: 60%;
        word-break: break-word;
    }

    .action-buttons {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
        justify-content: center;
        margin-top: 1.5rem;
    }

        .action-buttons .btn {
            border-radius: 8px;
            padding: 0.75rem 2rem;
            font-weight: 600;
            transition: all 0.2s;
            min-width: 180px;
        }

    .btn-home {
        background: white;
        color: #495057;
        border: 2px solid #dee2e6;
    }

        .btn-home:hover {
            background: #f8f9fa;
            border-color: #adb5bd;
            color: #212529;
        }

    .info-box {
        background: #e7f1ff;
        border-left: 4px solid var(--primary);
        border-radius: 8px;
        padding: 1rem;
        margin-top: 2rem;
        text-align: left;
    }

        .info-box p {
            margin: 0;
            color: #084298;
            font-size: 0.9rem;
            line-height: 1.6;
        }

        .info-box i {
            color: var(--primary);
            margin-right: 0.5rem;
        }

    @@media (max-width: 576px) {
        .success-icon {
            width: 70px;
            height: 70px;
        }

            .success-icon i {
                font-size: 2rem;
            }

        .success-title {
            font-size: 1.5rem;
        }

        .amount-value {
            font-size: 2rem;
        }

        .btn-download-primary {
            padding: 0.9rem 2rem;
            font-size: 1rem;
        }

        .receipt-card {
            padding: 1.5rem;
        }

        .receipt-row {
            flex-direction: column;
            gap: 0.25rem;
        }

        .receipt-value {
            max-width: 100%;
            text-align: left;
        }

        .action-buttons {
            flex-direction: column;
        }

            .action-buttons .btn {
                min-width: 100%;
            }
    }
</style>

<div class="success-container">
    <!-- Success Icon -->
    <div class="success-icon">
        <i class="bi bi-check-lg"></i>
    </div>

    <!-- Success Message -->
    <h1 class="success-title">Payment Successful!</h1>
    <p class="success-subtitle">
        Your electricity payment has been processed successfully
    </p>

    <!-- Amount Highlight - MOVED TO TOP -->
    <div class="amount-highlight">
        <div class="amount-label">Amount Paid</div>
        <div class="amount-value">₦@Model.Amount.ToString("N2")</div>
    </div>

    <!-- Download Button - PRIMARY FOCUS -->
    <a asp-action="DownloadReceipt" asp-route-transactionId="@Model.TransactionReference"
       class="btn btn-download-primary">
        <i class="bi bi-download"></i>Get Token
    </a>

    <!-- Receipt Card -->
    <div class="receipt-card">
        <div class="receipt-header">
            <div class="receipt-title">
                <i class="bi bi-receipt me-2"></i>Transaction Receipt
            </div>
            <div class="receipt-subtitle">PHED Electricity Payment</div>
        </div>

        <div class="receipt-body">
            <div class="receipt-row">
                <span class="receipt-label">Transaction ID</span>
                <span class="receipt-value">@Model.TransactionReference</span>
            </div>

            <div class="receipt-row">
                <span class="receipt-label">Customer Name</span>
                <span class="receipt-value">@Model.CustomerName</span>
            </div>

            <div class="receipt-row">
                <span class="receipt-label">Meter Number</span>
                <span class="receipt-value">@Model.MeterNo</span>
            </div>

            <div class="receipt-row">
                <span class="receipt-label">Payment Date</span>
                <span class="receipt-value">@Model.CreatedDate.ToString("MMM dd, yyyy hh:mm tt")</span>
            </div>

            <div class="receipt-row">
                <span class="receipt-label">Status</span>
                <span class="receipt-value">
                    <span class="badge bg-success">Completed</span>
                </span>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="action-buttons">
        <a asp-action="Index" class="btn btn-home">
            <i class="bi bi-house me-2"></i>Back to Home
        </a>
    </div>

    <!-- Info Box -->
    <div class="info-box">
        <p>
            <i class="bi bi-info-circle-fill"></i>
            <strong>Note:</strong> Your token has been sent to your registered phone number and email address.
            Please check your inbox and SMS for the token details.
        </p>
    </div>
</div>

<script>
    // Optional: Auto-scroll to top
    window.onload = function() {
        window.scrollTo(0, 0);
    };
</script>